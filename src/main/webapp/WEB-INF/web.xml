<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Test Java Servlet APIs</display-name>

    <!-- Plain Servlet Mappings -->
    <servlet>
        <servlet-name>StandardMethodsServlet</servlet-name>
        <servlet-class>com.test.servlet.StandardMethodsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StandardMethodsServlet</servlet-name>
        <url-pattern>/servlet/standard/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MultipleMethodsServlet</servlet-name>
        <servlet-class>com.test.servlet.MultipleMethodsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MultipleMethodsServlet</servlet-name>
        <url-pattern>/servlet/multiple/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CustomMethodServlet</servlet-name>
        <servlet-class>com.test.servlet.CustomMethodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomMethodServlet</servlet-name>
        <url-pattern>/servlet/custom/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MissingMethodServlet</servlet-name>
        <servlet-class>com.test.servlet.MissingMethodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MissingMethodServlet</servlet-name>
        <url-pattern>/servlet/missing/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UnsafeServlet</servlet-name>
        <servlet-class>com.test.servlet.UnsafeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UnsafeServlet</servlet-name>
        <url-pattern>/servlet/unsafe/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OverloadedServiceServlet</servlet-name>
        <servlet-class>com.test.servlet.OverloadedServiceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OverloadedServiceServlet</servlet-name>
        <url-pattern>/servlet/overloaded/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EmptyResponseServlet</servlet-name>
        <servlet-class>com.test.servlet.EmptyResponseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmptyResponseServlet</servlet-name>
        <url-pattern>/servlet/empty/*</url-pattern>
    </servlet-mapping>

    <!-- JAX-RS / Jersey Configuration -->
    <servlet>
        <servlet-name>JerseyServlet</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>com.test.jaxrs</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>JerseyServlet</servlet-name>
        <url-pattern>/jaxrs/*</url-pattern>
    </servlet-mapping>

    <!-- Spring MVC Configuration -->
    <servlet>
        <servlet-name>SpringDispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>/WEB-INF/spring-servlet.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>SpringDispatcher</servlet-name>
        <url-pattern>/spring/*</url-pattern>
    </servlet-mapping>

    <!-- BAD PRACTICE: Multiple servlets mapped to same pattern -->
    <servlet>
        <servlet-name>DuplicateMappingServlet1</servlet-name>
        <servlet-class>com.test.servlet.StandardMethodsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DuplicateMappingServlet1</servlet-name>
        <url-pattern>/duplicate/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DuplicateMappingServlet2</servlet-name>
        <servlet-class>com.test.servlet.MultipleMethodsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DuplicateMappingServlet2</servlet-name>
        <url-pattern>/duplicate/*</url-pattern>
    </servlet-mapping>

</web-app>

